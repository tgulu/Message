<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">


    <TextView
        android:id="@+id/text_sent_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent Message"
        android:background="@drawable/right_message_bubble"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sent_message"
        android:layout_alignBottom="@+id/text_sent_message"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="-15dp"
        android:text="12:00 PM"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_sent_message"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <!--
    android:layout_constraintBottom_toBottomOf="@+id/text_sent_message"
    android:layout_constraintRight_toLeftOf="@+id/text_sent_message" /> -->


</androidx.constraintlayout.widget.ConstraintLayout>